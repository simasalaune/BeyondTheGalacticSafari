<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    android:background="#372134"
    android:gravity="center">

    <TextView
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/extrude"
        android:text="Beyond\nthe Galactic Safari"
        android:textAlignment="center"
        android:textColor="#8cefb6"
        android:textSize="50sp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ufo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:text="Start"
        android:textSize="37sp"
        android:textColor="#8cefb6"
        android:fontFamily="@font/upheavtt"
        android:backgroundTint="#474476"
        android:drawableLeft="@drawable/spaceship"
        android:layout_marginBottom="16dp"
    android:onClick="startGame" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#474476"
        android:drawableLeft="@drawable/skin"
        android:fontFamily="@font/upheavtt"
        android:onClick="openSkinRoom"
        android:text="Change Skin"
        android:textColor="#8cefb6"
        android:textSize="20sp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textSize="20sp"
        android:textColor="#8cefb6"
        android:fontFamily="@font/upheavtt"
        android:backgroundTint="#474476"
        android:drawableLeft="@drawable/settings"
        android:onClick="openOptions" />


</LinearLayout>